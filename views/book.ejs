<%- include('partials/header') %>
    <!-- <section class="py-5 text-center "> -->
    <div class="row py-lg-5 text-center container book-row-field">
        <div class="col-lg-6 col-md-8 mx-auto">
            <%- include('partials/field') %>

        </div>
    </div>
    <!-- </section> -->
    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% foundFields.forEach(foundField => { %>
                    <% foundField.fieldBooks.forEach(book => { %>
                        <% if (book.bookField === fieldTitle) { %>
                            <div class="col">
                                <div class="card shadow-sm">
                                    <img class="card-img-top bd-placeholder-img" width="100%" height="200" src="6637170.jpg"
                                        alt="">

                                    <div class="card-body">
                                        <p class="card-title">
                                            <%= book.bookTitle %>
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Read</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    <% }) %>
                <% }) %>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>